<div class="container">
    <% @items.each_slice 3 do |item1, item2, item3| %>
        <div class="row">
            <% [item1, item2, item3].each do |item| %>
                <% if item != nil then %>
                    <div class="col s4">
                        <div class="card">
                            <div class="card-image">
                                <a href="<%= item.link %>" target="_blank"><img src="<%= item.enclosure %>"></a>
                            </div>
                            <div class="card-title">
                                <p><a href="<%= item.link %>" target="_blank"><%= item.title %></a></p>
                                <p><a href="https://translate.google.com/translate?sl=auto&tl=<%= @lang_google %>&js=y&prev=_t&hl=en&ie=UTF-8&u=<%= URI.escape(item.link) %>" target="_blank"><%= item["title_#{@lang_db}"] %></a></p>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </div>
    <% end %>
</div>